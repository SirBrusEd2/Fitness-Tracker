<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<?import javafx.util.Callback?>
<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.fitness_tracker.controller.FitnessTrackerController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-weight: bold; -fx-font-size: 20;" text="Фитнес-трекер" />

    <HBox spacing="10">
        <RadioButton fx:id="dbRadioButton" text="База данных" selected="true" />
        <RadioButton fx:id="fileRadioButton" text="Файл" />
        <RadioButton fx:id="memoryRadioButton" text="Память" />
    </HBox>

    <TabPane>
        <tabs>
            <!-- Вкладка "Прогресс" -->
            <Tab text="Прогресс">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Текущий вес (кг):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="currentWeightField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Целевой вес (кг):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="targetWeightField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Срок (дней):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="daysPeriod" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Button onAction="#calculateProgress" text="Рассчитать" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label fx:id="progressResult" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </Tab>

            <!-- Вкладка "Рекомендации" -->
            <Tab text="Рекомендации">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Тренировок на неделе:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="workoutsField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Средняя продолжительность (мин):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Button onAction="#checkOvertraining" text="Проверить" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label fx:id="recommendationResult" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </Tab>

            <!-- Вкладка "Конвертер" -->
            <Tab text="Конвертер">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Дистанция в милях:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="milesField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Button onAction="#convertToKm" text="Конвертировать в км" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label fx:id="conversionResult" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </Tab>

            <!-- Вкладка "История" -->
            <Tab text="История">
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                    <!-- Панель поиска и фильтрации -->
                    <GridPane hgap="10" vgap="10">
                        <Label text="Поиск:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="searchField" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <GridPane.margin>
                                <Insets right="50.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Button text="Найти" onAction="#handleSearch" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                        <Label text="Сортировка:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="sortComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <CheckBox fx:id="ascendingCheckBox" text="По возрастанию" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Button text="Применить" onAction="#handleSort" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <Label text="Фильтр:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="filterComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Button text="Применить" onAction="#handleFilter" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                    </GridPane>

                    <!-- Кнопки управления -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button onAction="#loadHistory" text="Загрузить историю" />
                        <Button onAction="#editHistoryRecord" text="Редактировать" />
                        <Button onAction="#deleteHistoryRecord" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Удалить" />
                    </HBox>

                    <TableView fx:id="historyTable" prefHeight="425.0" prefWidth="622.0">
                        <columns>
                            <TableColumn prefWidth="50" text="ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="120" text="Дата">
                                <cellValueFactory>
                                    <PropertyValueFactory property="dateString" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="150" text="Тип операции">
                                <cellValueFactory>
                                    <PropertyValueFactory property="operationType" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="300" text="Детали">
                                <cellValueFactory>
                                    <PropertyValueFactory property="details" />
                                </cellValueFactory>
                            </TableColumn>

                            <TableColumn prefWidth="100" text="Статус">
                                <cellValueFactory>
                                    <PropertyValueFactory property="activeStatus" />
                                </cellValueFactory>
                            </TableColumn>

                        </columns>
                    </TableView>

                    <!-- Форма для редактирования -->
                    <GridPane fx:id="editForm" hgap="10" vgap="10" visible="false">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>

                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="editIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Тип операции:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="editOperationTypeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Детали:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="editDetailsField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <CheckBox fx:id="editStatusCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <Button onAction="#saveEditedRecord" text="Сохранить" />
                            <Button onAction="#cancelEditing" text="Отмена" />
                        </HBox>
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>

                </VBox>
            </Tab>

        </tabs>
    </TabPane>
</VBox>
